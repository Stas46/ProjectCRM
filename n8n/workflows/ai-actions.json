        "operation": "insert",
        "schema": "public",
        "table": "tasks",
        "columns": {
          "mappingMode": "defineBelow",
          "value": {
            "title": "={{$json.body.data.title}}",
            "description": "={{$json.body.data.description}}",
            "priority": "={{$json.body.data.priority || 2}}",
            "status": "={{$json.body.data.status || 'todo'}}",
            "due_date": "={{$json.body.data.due_date}}",
            "project_id": "={{$json.body.data.project_id}}",
            "assignee_id": "={{$json.body.user_id}}"
          }
        },
        "options": {
          "queryBatching": "independently"
        }
      },
      "id": "create-task-db",
      "name": "Create Task in Supabase",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [650, 200],
      "credentials": {
        "postgres": {
          "id": "supabase-credentials",
          "name": "Supabase PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const task = $input.all()[0].json;\nconst bodyData = $input.all()[0].json.body || {};\nconst priority = task.priority === 1 ? 'üî• –°—Ä–æ—á–Ω–æ' : task.priority === 2 ? '‚ö° –í–∞–∂–Ω–æ' : 'üìã –û–±—ã—á–Ω–∞—è';\n\nreturn {\n  json: {\n    chat_id: bodyData.telegram_id,\n    message: `üÜï *–ù–æ–≤–∞—è –∑–∞–¥–∞—á–∞ —Å–æ–∑–¥–∞–Ω–∞*\\n\\nüìù ${task.title}\\n${priority}\\n‚è∞ –î–µ–¥–ª–∞–π–Ω: ${task.due_date || '–Ω–µ —É–∫–∞–∑–∞–Ω'}\\n\\n_–°–æ–∑–¥–∞–Ω–æ —á–µ—Ä–µ–∑ AI_`,\n    parse_mode: 'Markdown',\n    task_id: task.id,\n    task_title: task.title\n  }\n};"
      },
      "id": "format-notification",
      "name": "Format Notification",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [850, 200]
    },
    {
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{$json.chat_id}}",
              "operation": "isNotEmpty"
            }
          ]
        }
      },
      "id": "has-telegram",
      "name": "Has Telegram?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [1050, 200]
    },
    {
      "parameters": {
        "resource": "message",
        "operation": "sendMessage",
        "chatId": "={{$json.chat_id}}",
        "text": "={{$json.message}}",
        "additionalFields": {
          "parse_mode": "={{$json.parse_mode}}"
        }
      },
      "id": "send-telegram",
      "name": "Send Telegram",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [1250, 100],
      "credentials": {
        "telegramApi": {
          "id": "1",
          "name": "Telegram Bot"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"success\": true,\n  \"action\": \"create_task\",\n  \"task_id\": \"{{$json.task_id}}\",\n  \"task_title\": \"{{$json.task_title}}\",\n  \"notifications_sent\": [\"telegram\"],\n  \"message\": \"–ó–∞–¥–∞—á–∞ —Å–æ–∑–¥–∞–Ω–∞ –∏ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ\"\n}",
        "options": {}
      },
      "id": "success-with-telegram",
